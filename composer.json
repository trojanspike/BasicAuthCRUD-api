{
	"name": "easycrud-api",
	"description": " An easy to use Crud and rest API, cross domain JS request made easy ",
	"keywords": ["api", "content", "management"],
	"license": "MIT",
	"require": {
		"php" : ">=5.4.0",
	   	"leafo/scssphp": "0.0.12",
		"gkralik/php-uglifyjs": "0.5.*",
	   	"illuminate/database": "5.0.4",
	   	"wixel/gump": "1.1.*",
		"ramsey/uuid": "2.8.0",
		"swiftmailer/swiftmailer": "~5.4",
		"mrclay/jsmin-php": "^2.3"
	},
	"require-dev": {
		"mockery/mockery": "0.9.3",
		"fzaninotto/faker": "1.4.0"
	},
	"autoload": {
	    "psr-4": {
	    	"App\\":"Application/core/Classes/App/",
	    	"Database\\":"Application/core/Classes/Database/",
	    	"Model\\":"Application/core/Classes/Model/",
	    	"Illuminate\\Database\\": ""
	    },
		"classmap": ["./src/"],
		"files": ["Application/core/GlobalFn.php"]
	},
	"autoload-dev": {},
	"scripts": {
		"post-install-cmd": ["./Application/bin/schema up"],
		"post-update-cmd": [],
		"post-create-project-cmd": []
	},
	"config": {
	    "vendor-dir": "./Application/vendor/",
		"preferred-install": "dist"
	},
	"minimum-stability": "stable",
	"_Reference" : "https://getcomposer.org/doc/04-schema.md"
}
